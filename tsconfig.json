{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["@types/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS"
    }
  }
}
